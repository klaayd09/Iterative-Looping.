#include <stdio.h>
 
int main()
{
    int n, reverse_Number = 0, rem,Original_number=0;
 
    printf("Input any integer:  ");
    scanf("%d", &n);
    Original_number=n;
    for(;n != 0;)
    {
        rem = n%10;
        reverse_Number = reverse_Number*10 + rem;
        n /= 10;
    }
 
    printf("Reversed for %d is %d",Original_number,reverse_Number);
 
    return 0;
}
